{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://flynn.io/schema/examples/controller/app_resource_list#",
  "allOf": [
    { "$ref": "schema/examples/base#" },
    {
      "type": "object",
      "properties": {
        "request": {
          "type": "object",
          "properties": {
            "method": {
              "type": "string",
              "enum": ["GET"]
            }
          }
        },
        "response": {
          "type": "object",
          "properties": {
            "body": {
              "type": "array",
              "items": {
                "$ref": "schema/controller/resource#"
              }
            }
          }
        }
      }
    }
  ]
}
