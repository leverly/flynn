{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://flynn.io/schema/examples/base#",
  "type": "object",
  "properties": {
    "request": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "enum": ["GET", "POST", "PUT", "DELETE"]
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "headers": {
          "type": "object"
        },
        "body": {
          "type": "any"
        }
      },
      "additionalProperties": false
    },
    "response": {
      "type": "object",
      "properties": {
        "headers": {
          "type": "object"
        },
        "body": {
          "type": "any"
        }
      },
      "additionalProperties": false
    }
  }
}
